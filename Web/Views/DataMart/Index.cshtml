@Scripts.Render("~/bundles/scripts/datamart")

<script>
    $(function () {
        var dmPage = new DataMart({
            navigationPanel: $('#navPanel'),
            viewContainers: $('.viewContainer'),
            viewControls: $('.tableViewControl, .chartViewControl')            
        });
    });
</script>
